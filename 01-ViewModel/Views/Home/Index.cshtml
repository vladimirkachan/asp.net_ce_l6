@using _01_ViewModel.ViewModels
@model WorksViewModel
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <link href="~/style.css" rel="stylesheet" />
    <title>Works</title>
</head>
<body>
    <h1>Persons and Companies</h1>
    <hr />
    @foreach (var person in Model.Persons)
    {
        <h2>@person.Id) @(person.FirstName + " " + person.LastName) - @person.Age years old</h2>
        <p>@(new string('-', 30))</p>
    }
    <hr />
    @foreach (var company in Model.Companies)
    {
        <h2>@company.Id) @(company.Name) - @company.City</h2>
        <p>@(new string('-',30))</p>
    }
</body>
</html>